<Application x:Class="FlashSearch.Viewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FlashSearch.Viewer"
             xmlns:vm="clr-namespace:FlashSearch.Viewer.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes\Styles.xaml" />
                <ResourceDictionary Source="Themes\WindowStyle.xaml" />
                <ResourceDictionary Source="Themes\CustomStyles.xaml" />
                <ResourceDictionary>
                    <vm:ViewModelLocator x:Key="Locator" /> 
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
